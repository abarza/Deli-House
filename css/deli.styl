body
  padding-top 0px

.text-center
  padding-top 20px

.col-xs-12
  background-color #fff

#sidebar
  height 100%
  padding-right 0
  padding-top 0px
  background-color #3b3b3b
  padding-top 0
  .nav
    width 95%
    & > li
      color #ddd
      background linear-gradient(#3E3E3E, #383838)
      border-top 1px solid #484848
      border-bottom 1px solid #2E2E2E
      &:first-child
        border-top 0
      & > a
        color #ddd
        & > img
          max-width 14px
    .caret
      border-top-color #fff
      border-bottom-color #fff
    a
      &:hover
        .caret
          border-top-color #fff
          border-bottom-color #fff
  li
    border 0 #f2f2f2 solid
    border-bottom-width 1px

@media screen and (max-width: 767px)
  .row-offcanvas
    position relative
    -webkit-transition all 0.25s ease-out
    -moz-transition all 0.25s ease-out
    transition all 0.25s ease-out

  .row-offcanvas-right
    .sidebar-offcanvas
      right -41.6%
    &.active
      right 41.6%

  .row-offcanvas-left
    .sidebar-offcanvas
      left -41.6%
    &.active
      left 41.6%

  .sidebar-offcanvas
    position absolute
    top 0
    width 41.6%

  #sidebar .nav>li>a:hover, #sidebar .nav>li>a:focus
    text-decoration none
    background #323232
    color #fff

