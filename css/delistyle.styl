// Contacto

.contacto
    .titulo
        font-size 2em
        font-family 'league'

    ul
        float none
        list-style none
        listyle none
        margin 0 auto
        padding 0 20px
        li
            a
                -webkit-transition background 0.3s, box-shadow 0.3s
                box-shadow inset 0 -1px rgba(0,0,0,0.1)
                color verde
                display block
                font-family 'league'
                font-size 1.6em
                letter-spacing 0px
                line-height 0.9em
                outline none
                padding 0.2em 1em 0.2em 1.2em
                text-decoration none
                text-transform uppercase
                transition background 0.3s, box-shadow 0.3s
                &:hover
                    background rgba(0,0,0,0.2)
                    box-shadow inset 0 -1px rgba(0,0,0,0)
                    color #fff
                .fc
                    box-shadow inset 0 1px rgba(0,0,0,0.1), inset 0 -1px rgba(0,0,0,0.1)

    .disponibilidad,
    .horario
        margin 10px 20px
        padding 0 20px

    .horario
        box-shadow inset 0 1px rgba(0,0,0,0.1), inset 0 -1px rgba(0,0,0,0.1)
        h5
            font-family 'league'
            font-size 1.6em
            letter-spacing 0px
            line-height 0.9em
            text-transform uppercase
            color verde
            padding 1em 0 0.2em 0



